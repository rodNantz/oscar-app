<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oscar.go.com.oscarapp.voto.VotoActivity">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:id="@+id/posterVoto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="73dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/nomeFilmeVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/posterIV"
        android:layout_toRightOf="@+id/posterIV"
        android:hint="Nome do filme"
        android:textSize="19sp"
        android:maxWidth="150dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginRight="91dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/generoVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeFilmeTV"
        android:layout_toEndOf="@+id/posterIV"
        android:layout_toRightOf="@+id/posterIV"
        android:paddingTop="6dp"
        android:hint="GenÃªro"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeFilmeVoto" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filme"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diretor"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="241dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="155dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.993" />

    <TextView
        android:id="@+id/nomeDiretorVoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Diretor"
        android:textSize="24sp"
        android:maxWidth="3500dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnConfirmaVoto"
        android:layout_width="253dp"
        android:layout_height="66dp"
        android:text="Confirmar Voto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="34dp" />

</android.support.constraint.ConstraintLayout>
