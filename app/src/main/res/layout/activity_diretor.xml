<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oscar.go.com.oscarapp.diretor.DiretorActivity">

    <TextView
        android:id="@+id/nomeDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome do diretor"
        android:textSize="30sp"
        android:maxWidth="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="121dp"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/btnVotarDiretor"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:text="Votar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="243dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeDTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diretor:"
        android:textSize="30sp"
        android:layout_marginLeft="143dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="47dp" />
</android.support.constraint.ConstraintLayout>
