<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oscar.go.com.oscarapp.filme.FilmeActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:id="@+id/posterFIV"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/nomeFTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/posterIV"
        android:layout_toRightOf="@+id/posterIV"
        android:hint="Nome do filme"
        android:textSize="29sp"
        android:layout_marginRight="96dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/posterFIV" />

    <TextView
        android:id="@+id/generoFTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeFilmeTV"
        android:layout_toEndOf="@+id/posterIV"
        android:layout_toRightOf="@+id/posterIV"
        android:hint="GenÃªro"
        android:textSize="25sp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeFTV"
        android:layout_marginRight="152dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnVotarFilme"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:text="Votar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
